#!/usr/bin/env bash
# This script changes localhost and facebook.com IP resolution

# Create a temporary hosts file with updated localhost
grep -v '^127\.0\.0\.1[[:space:]]\+localhost' /etc/hosts > /tmp/hosts

# Add new localhost entry
echo "127.0.0.2 localhost" >> /tmp/hosts

# Add facebook.com mapping if not present
if ! grep -q "facebook.com" /tmp/hosts; then
    echo "8.8.8.8 facebook.com" >> /tmp/hosts
fi

# Replace the original hosts file
cat /tmp/hosts > /etc/hosts

